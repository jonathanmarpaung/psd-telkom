{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // "rootDir": "./src",  <-- HAPUS BARIS INI
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  // PERBARUI BAGIAN INI:
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}